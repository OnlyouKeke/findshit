      } else if (code.includes('TIMEOUT') || msg.includes('è¶…æ—¶')) {
        this.showError('å®šä½è¶…æ—¶ï¼Œè¯·æ£€æŸ¥ç½‘ç»œè¿æ¥');
      } else {
